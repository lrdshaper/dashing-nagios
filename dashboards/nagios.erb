    <li data-row="1" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="prod-service" data-view="Nagios" data-unordered="true" data-title="Prod Services" data-moreinfo=""></div>
    </li>
    <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="prod-service-alerts" data-view="List" data-unordered="true" data-title="Prod Service Alerts"></div>
